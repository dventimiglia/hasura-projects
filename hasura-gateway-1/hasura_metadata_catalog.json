{
  "resource_version": 5,
  "metadata": {
    "version": 3,
    "sources": [],
    "actions": [
      {
        "name": "getProduct",
        "definition": {
          "handler": "http://nginx",
          "output_type": "[Product2]",
          "forward_client_headers": true,
          "headers": [
            {
              "name": "Range",
              "value": "0-{{$body.input?.limit}}"
            }
          ],
          "arguments": [
            {
              "name": "id",
              "type": "ID"
            },
            {
              "name": "limit",
              "type": "String"
            }
          ],
          "request_transform": {
            "method": "GET",
            "query_params": {
              "id": "{{$body.input?.id}}"
            },
            "request_headers": {
              "add_headers": {},
              "remove_headers": [
                "content-type"
              ]
            },
            "template_engine": "Kriti",
            "url": "{{$base_url}}/product",
            "version": 2
          },
          "response_transform": {
            "body": {
              "action": "transform",
              "template": "{{if inverse(empty($body))}} {{ range _, item := $body}} {\n  \"id\": {{item?.id}},\n  \"createdAt\": {{item?.created_at}},\n  \"updatedAt\": {{item?.updated_at}},\n  \"name\": {{item?.name}},\n  \"price\": {{item?.price}}\n  } {{end}} {{else}} null {{end}}"
            },
            "template_engine": "Kriti",
            "version": 2
          },
          "type": "query"
        }
      }
    ],
    "custom_types": {
      "objects": [
        {
          "name": "Product2",
          "fields": [
            {
              "name": "createdAt",
              "type": "String"
            },
            {
              "name": "id",
              "type": "ID"
            },
            {
              "name": "name",
              "type": "String"
            },
            {
              "name": "price",
              "type": "Int"
            },
            {
              "name": "updatedAt",
              "type": "String"
            }
          ]
        }
      ],
      "enums": [
        {
          "name": "Prefer",
          "values": [
            {
              "description": null,
              "is_deprecated": null,
              "value": "countnone"
            }
          ]
        }
      ]
    }
  }
}